<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">


        <com.example.zhangyang05.demolist.demo.ppdprogress.PPDProgressView
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:ppd_max="1000"
            app:ppd_progress="500"
            app:ppd_progress_height="6dp"
            app:ppd_progress_above_text_size="15sp"
            app:ppd_show_text="true"
            app:ppd_strokeWidth="1px"
            app:ppd_text_margin="5dp" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.example.zhangyang05.demolist.demo.ppdprogress.PPDProgressView
            android:id="@+id/progress_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            app:ppd_max="1000"
            app:ppd_progress="500"
            app:ppd_progress_height="6dp"
            app:ppd_progress_above_text_size="15sp"
            app:ppd_show_text="true"
            app:ppd_progress_style="seek_bar"
            app:ppd_strokeWidth="0px"
            app:ppd_text_margin="5dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
