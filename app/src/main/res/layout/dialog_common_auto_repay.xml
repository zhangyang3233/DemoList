<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/ppd_dialog_margin_left"
    android:paddingRight="@dimen/ppd_dialog_margin_right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content"
        style="@style/ppd_dialog_content"
        android:padding="0dp"
        android:text="@string/auto_repay_tip"
        />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/dialog_common_agreement_layout"
        android:layout_marginTop="35dp"
        />
</LinearLayout>