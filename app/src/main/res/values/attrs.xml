<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZYProgressView">
        <attr name="ppd_progressColor" format="color" />
        <attr name="ppd_back_progressColor" format="color" />
        <attr name="ppd_max" format="integer" />
        <attr name="ppd_progress" format="integer" />
        <attr name="ppd_strokeColor" format="color" />
        <attr name="ppd_strokeWidth" format="dimension" />
        <attr name="ppd_text_margin" format="dimension" />
        <attr name="ppd_progress_height" format="dimension" />
        <attr name="ppd_show_text" format="boolean" />
        <attr name="ppd_top_text_bold" format="boolean" />
        <attr name="ppd_progress_above_text_color" format="color" />
        <attr name="ppd_progress_above_text_size" format="dimension" />
        <attr name="ppd_progress_following_text_color" format="color" />
        <attr name="ppd_thumb" format="reference" />
        <attr name="ppd_progress_following_text_size" format="dimension" />
        <attr name="ppd_progress_style" format="enum">
            <enum name="progress" value="1" />
            <enum name="seek_bar" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ConvenientBanner">
        <attr name="canLoop" format="boolean" />
    </declare-styleable>


    <declare-styleable name="SwitchButton">
        <attr name="onColor" format="color" />
        <attr name="offColor" format="color" />
        <attr name="btnColor" format="color" />
        <attr name="btnStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AutoFitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
    </declare-styleable>
</resources>