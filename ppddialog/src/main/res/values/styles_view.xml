<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="divider_horizontal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/ppd_dialog_gray_divider</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:background">@color/ppd_dialog_gray_divider</item>
    </style>

    <style name="ppd_dialog_title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ppd_dialog_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ppd_dialog_btn">
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ppd_dialog_btn_color">
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ppd_dialog_main_color</item>
    </style>

    <style name="ppd_dialog_single_btn_color">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ppd_dialog_main_color</item>
    </style>
</resources>